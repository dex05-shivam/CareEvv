<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="care.example.careevv.activity.ChangePassword"
    android:background="#fff">
    <RelativeLayout
        android:id="@+id/rl2"
        android:background="@drawable/button_touch_orange_rect"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_50"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/login_back"
            android:layout_width="@dimen/space_30"
            android:layout_height="@dimen/space_30"
            android:layout_gravity="center"
            android:layout_centerVertical="true"
            android:tint="@color/white"
            android:layout_marginLeft="@dimen/space_10"
            android:src="@drawable/back_arrow"/>

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="@dimen/space_18"
            android:text="Change Password"
            android:layout_gravity="center"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            />




    </RelativeLayout>

    <ImageView
        android:id="@+id/logo_icon"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_150"
        android:src="@drawable/login_top_banner"
        android:scaleType="fitXY"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/login_text"
        android:layout_below="@+id/logo_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/space_30"
        android:text="CareEvv"
        android:gravity="bottom"
        android:textStyle="bold"
        android:textColor="@color/black_shade"
        android:textSize="@dimen/space_40"/>




    <TextView
        android:id="@+id/old_password_text"
        android:layout_below="@+id/login_sub_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="top"
        android:layout_marginTop="@dimen/space_10"
        android:layout_marginLeft="@dimen/space_35"
        android:text="Old Password"
        android:textColor="@color/black_shade"
        android:textSize="@dimen/space_15"/>

    <RelativeLayout
        android:layout_marginRight="@dimen/space_25"
        android:layout_marginLeft="@dimen/space_25"
        android:id="@+id/old_layout"
        android:background="@drawable/edit_text"
        android:layout_width="match_parent"
        android:layout_below="@+id/login_text"
        android:layout_marginTop="@dimen/space_5"
        android:layout_height="@dimen/space_50">

        <EditText
            android:id="@+id/et_old_pass"
            android:layout_marginLeft="@dimen/space_15"
            android:layout_marginRight="@dimen/space_5"
            android:singleLine="true"
            android:hint=""
            android:inputType="textPassword"
            android:textSize="@dimen/space_15"
            android:textColorHint="@color/black"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_35"
            android:background="@null"
            />
        <ImageView
            android:layout_width="@dimen/space_20"
            android:layout_height="@dimen/space_20"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/space_10"
            android:src="@drawable/key"/>


    </RelativeLayout>
    <TextView
        android:id="@+id/password_text"
        android:layout_below="@+id/agency_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="top"
        android:layout_marginTop="@dimen/space_10"
        android:layout_marginLeft="@dimen/space_35"
        android:text="Password"
        android:textColor="@color/black_shade"
        android:textSize="@dimen/space_15"/>
    <RelativeLayout
        android:layout_marginRight="@dimen/space_25"
        android:layout_marginLeft="@dimen/space_25"
        android:id="@+id/agency_layout"
        android:background="@drawable/edit_text"
        android:layout_width="match_parent"
        android:layout_below="@+id/login_text"
        android:layout_marginTop="@dimen/space_5"

        android:layout_height="@dimen/space_50">

        <EditText
            android:id="@+id/et_agency"
            android:layout_marginLeft="@dimen/space_15"
            android:layout_marginRight="@dimen/space_5"
            android:singleLine="true"
            android:hint=""
            android:textSize="@dimen/space_15"
            android:inputType="textPassword"
            android:textColorHint="@color/black"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_35"
            android:background="@null"
            />
        <ImageView
            android:layout_width="@dimen/space_20"
            android:layout_height="@dimen/space_20"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/space_10"
            android:src="@drawable/key"/>


    </RelativeLayout>
    <TextView
        android:id="@+id/confirm_password_text"
        android:layout_below="@+id/agency_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="top"
        android:layout_marginTop="@dimen/space_10"
        android:layout_marginLeft="@dimen/space_35"
        android:text="Confirm Password"
        android:textColor="@color/black_shade"
        android:textSize="@dimen/space_15"/>
    <RelativeLayout
        android:layout_marginRight="@dimen/space_25"
        android:layout_marginLeft="@dimen/space_25"
        android:id="@+id/email_layout"
        android:background="@drawable/edit_text"
        android:layout_width="match_parent"
        android:layout_below="@+id/agency_layout"
        android:layout_marginTop="@dimen/space_5"
        android:layout_height="@dimen/space_50">

        <EditText
            android:id="@+id/et_email"
            android:layout_marginLeft="@dimen/space_15"
            android:layout_marginRight="@dimen/space_5"
            android:singleLine="true"
            android:hint=""
            android:textSize="@dimen/space_15"
            android:textColorHint="@color/black"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_35"
            android:background="@null"
            />
        <ImageView
            android:layout_width="@dimen/space_20"
            android:layout_height="@dimen/space_20"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/space_10"
            android:layout_centerVertical="true"
            android:src="@drawable/key"/>


    </RelativeLayout>

    <TextView
        android:layout_marginBottom="@dimen/space_5"
        android:id="@+id/sign_button"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_50"
        android:layout_below="@+id/email_layout"
        android:layout_marginLeft="@dimen/space_120"
        android:layout_marginRight="@dimen/space_120"
        android:layout_marginTop="@dimen/space_15"
        android:textSize="@dimen/space_15"
        android:textStyle="bold"
        android:background="@drawable/button_touch_blue"
        android:gravity="center"
        android:elevation="@dimen/space_5"
        android:text="Save"
        android:textColor="@color/white" />


</LinearLayout>