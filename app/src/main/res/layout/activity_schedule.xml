<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
<LinearLayout
    android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"

tools:context="care.example.careevv.activity.ScheduleActivity">


    <LinearLayout
        android:id="@+id/layout_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/button_touch_orange_rect"
        tools:context="care.example.careevv.activity.ScheduleActivity">
        <RelativeLayout
            android:layout_marginTop="@dimen/space_25"
            android:id="@+id/rl2"
            android:background="@drawable/button_touch_orange_rect"
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_40"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/login_back"
                android:layout_width="@dimen/space_30"
                android:layout_height="@dimen/space_30"
                android:layout_gravity="center"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/space_10"
                android:src="@drawable/back_arrow"/>

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Michal Moore"
                android:textColor="@color/white"
                android:textSize="@dimen/space_18"
                app:fontFamily="@font/poppins" />



        </RelativeLayout>



        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#F7F3F3"
            android:scrollbars="vertical"
            android:layout_weight="1"
            android:visibility="visible"
            android:id="@+id/scroll_view">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginBottom="@dimen/space_20"
            tools:context="care.example.careevv.activity.ScheduleActivity">
            <LinearLayout
                android:background="@drawable/button_touch_orange_rect"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_150">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="@dimen/space80"
                    android:layout_height="@dimen/space80"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/user"
                    android:id="@+id/image_title"
                    />


            </LinearLayout>
            <android.support.v7.widget.CardView
                android:id="@+id/details_layout"
                android:layout_marginTop="@dimen/space_100"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:layout_marginLeft="@dimen/space_20"
                android:layout_marginRight="@dimen/space_20"
                app:cardElevation="@dimen/space_5"
                app:cardCornerRadius="@dimen/space_5">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <LinearLayout
                    android:layout_marginTop="@dimen/space_10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="@dimen/space_10"
                    android:layout_marginRight="@dimen/space_10"
                    android:layout_marginBottom="@dimen/space_10">

                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                       >

                        <LinearLayout
                            android:layout_marginTop="@dimen/space_10"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginLeft="@dimen/space_5"
                            android:layout_marginRight="@dimen/space_5">

                            <ImageView
                                android:id="@+id/location_icon"
                                android:layout_width="@dimen/space_20"
                                android:layout_height="@dimen/space_20"
                                android:src="@drawable/mappinicon"/>

                            <TextView
                                android:id="@+id/location"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/space_5"
                                android:layout_toRightOf="@id/location_icon"
                                android:text="ddddddddddddddddccccccccc v"
                                android:textColor="@color/dark_gray"
                                android:textSize="@dimen/space_16"
                                app:fontFamily="@font/poppins" />

                        </LinearLayout>
                        <LinearLayout
                            android:layout_marginTop="@dimen/space_10"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginLeft="@dimen/space_5"
                            android:layout_marginRight="@dimen/space_5">

                            <ImageView
                                android:id="@+id/time_icon"
                                android:layout_width="@dimen/space_25"
                                android:layout_height="@dimen/space_25"
                                android:src="@drawable/timeicon"/>

                            <TextView
                                android:id="@+id/time_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/space_5"
                                android:layout_toRightOf="@id/location_icon"
                                android:maxLength="50"
                                android:text="ssssssssssssss"
                                android:textColor="@color/darker_gray"
                                android:textSize="@dimen/space_16"
                                app:fontFamily="@font/poppins" />

                        </LinearLayout>
                    </LinearLayout>
                    <View
                        android:layout_width="1sp"
                        android:layout_height="match_parent"
                        android:background="@color/dark_gray"
                        android:layout_margin="@dimen/space_20"
                        />

                    <LinearLayout
                        android:id="@+id/diection_layout"
                        android:layout_marginTop="@dimen/space_10"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center_horizontal"
                        android:layout_marginLeft="@dimen/space_5"
                        android:layout_marginRight="@dimen/space_5">

                        <LinearLayout
                            android:id="@+id/call_icon"
                            android:elevation="@dimen/space_5"
                            android:layout_width="@dimen/space_30"
                            android:layout_height="@dimen/space_30"
                            android:layout_gravity="center_horizontal"
                            android:gravity="center"
                            android:background="@drawable/button_touch_blue"
                            android:orientation="vertical">
                            <ImageView

                                android:layout_width="@dimen/space_20"
                                android:layout_height="@dimen/space_20"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_call_black_24dp" />
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/view_deatils_button"
                            android:layout_marginTop="@dimen/space_20"
                            android:elevation="@dimen/space_5"
                            android:layout_width="@dimen/space_30"
                            android:layout_height="@dimen/space_30"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:background="@drawable/button_touch_orange"
                            android:orientation="vertical">
                            <ImageView

                                android:layout_width="@dimen/space_15"
                                android:layout_height="@dimen/space_15"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_place_black_24dp" />
                        </LinearLayout>




                    </LinearLayout>
                    <LinearLayout
                        android:visibility="gone"
                        android:layout_marginTop="@dimen/space_10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginLeft="@dimen/space_5"
                        android:layout_marginRight="@dimen/space_5">

                        <ImageView
                            android:id="@+id/phone_icon"
                            android:layout_width="@dimen/space_25"
                            android:layout_height="@dimen/space_25"
                            android:src="@drawable/ic_phone_in_talk_black_24dp"/>

                        <TextView
                            android:visibility="gone"
                            android:layout_toRightOf="@id/location_icon"
                            android:id="@+id/phone_text"
                            android:layout_width="wrap_content"
                            android:text="gfggfgfgf gfgfgfgfgf gffgfgf"
                            android:textColor="@color/darker_gray"
                            android:textSize="@dimen/space_16"
                            android:maxLength="50"
                            android:layout_marginLeft="@dimen/space_5"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                </LinearLayout>










            </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/details_layout1"
                android:layout_marginTop="@dimen/space_15"
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_150"
                android:background="#fff"
                android:layout_below="@+id/details_layout"
                android:layout_marginLeft="@dimen/space_20"
                android:layout_marginRight="@dimen/space_20"
                app:cardElevation="@dimen/space_5"
                app:cardCornerRadius="@dimen/space_5">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/activity_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/details_layout"
                        android:layout_marginTop="@dimen/space_15"
                        android:layout_marginLeft="@dimen/space_15"
                        android:text="Activities"
                        android:textColor="@color/blue_secondry"
                        android:textSize="@dimen/space_20"
                        app:fontFamily="@font/poppins_medium" />


            <android.support.v7.widget.RecyclerView
                android:layout_width="wrap_content"
                android:layout_below="@+id/view1"
                android:id="@+id/services_recycler"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/space_15"></android.support.v7.widget.RecyclerView>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/details_layout2"
                android:layout_marginTop="@dimen/space_15"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/space_20"
                android:background="#fff"
                android:layout_below="@+id/details_layout1"
                android:layout_marginLeft="@dimen/space_20"
                android:layout_marginRight="@dimen/space_20"
                app:cardElevation="@dimen/space_5"
                app:cardCornerRadius="@dimen/space_5">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/additional_notes_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/space_15"
                        android:layout_marginTop="@dimen/space_15"
                        android:text="Additional Notes"
                        android:textColor="@color/blue_secondry"
                        android:textSize="@dimen/space_20"
                        app:fontFamily="@font/poppins_medium" />


                    <TextView
                        android:id="@+id/et_notes"
                        android:visibility="visible"
                        android:layout_marginLeft="@dimen/space_10"
                        android:layout_marginRight="@dimen/space_10"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="top"
                        android:textSize="@dimen/space_15"
                        android:padding="@dimen/space_5"
                        android:hint="No Notes Available... "
                        android:textColorHint="@color/darker_gray1"
                        android:layout_gravity="top"
                        />
                </LinearLayout>
            </android.support.v7.widget.CardView>

        </RelativeLayout>
        </android.support.v4.widget.NestedScrollView>

        <LinearLayout
            android:elevation="@dimen/space_5"
            android:id="@+id/clock_in_out"
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_50"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="@drawable/button_touch_blue_rect"
            >
            <ImageView
                android:layout_width="@dimen/space_20"
                android:layout_height="@dimen/space_20"
                android:layout_gravity="center"
                android:src="@drawable/ic_query_builder_black_24dp"/>

            <TextView
                android:id="@+id/text_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Clock in"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginLeft="@dimen/space_5"
                android:textColor="@color/white"
                android:textSize="@dimen/space_15"/>

            <TextView
                android:layout_marginTop="@dimen/space_5"
                android:visibility="gone"
                android:id="@+id/timer_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textStyle="bold"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/white"
                android:textSize="@dimen/space_15"/>

        </LinearLayout>

        <LinearLayout
            android:visibility="gone"
            android:elevation="@dimen/space_5"
            android:id="@+id/clock_in_out1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_50"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="@drawable/button_touch_orange_rect"
            >
            <ImageView
                android:layout_width="@dimen/space_20"
                android:layout_height="@dimen/space_20"
                android:layout_gravity="center"
                android:src="@drawable/ic_query_builder_black_24dp"/>

            <TextView
                android:id="@+id/text_time1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Clock in"
                android:textStyle="bold"
                android:layout_marginLeft="@dimen/space_5"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:textSize="@dimen/space_15"/>

            <TextView
                android:layout_marginTop="@dimen/space_5"
                android:visibility="gone"
                android:id="@+id/timer_count1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textStyle="bold"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/white"
                android:textSize="@dimen/space_15"/>

        </LinearLayout>
        <FrameLayout
            android:visibility="gone"
            android:id="@+id/content_frame"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>


</LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/left_drawer"
        android:layout_width="300sp"
        android:layout_marginTop="@dimen/space_20"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="#fff"
        android:layoutAnimation="@anim/layout_animation"
        android:choiceMode="singleChoice"
        android:divider="@android:color/darker_gray"
        android:dividerHeight="1dp" />
</android.support.v4.widget.DrawerLayout>