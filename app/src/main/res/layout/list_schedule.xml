<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    app:cardElevation="@dimen/space_6"
    android:layout_marginLeft="@dimen/space_15"
    android:layout_marginRight="@dimen/space_15"
    android:layout_marginTop="@dimen/space_10"
    app:cardCornerRadius="@dimen/space_5"
    android:layout_marginBottom="@dimen/space_10"

    android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <LinearLayout
            android:layout_marginBottom="@dimen/space_5"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_image"
                android:layout_width="70sp"
                android:layout_height="70sp"
                android:layout_marginLeft="@dimen/space_10"
                android:layout_marginRight="@dimen/space_10"
                android:layout_marginTop="@dimen/space_10"
                android:layout_gravity="center"
                android:src="@drawable/schimg"
                android:layout_marginBottom="@dimen/space_15"
                />
            <LinearLayout
                android:layout_marginBottom="@dimen/space_15"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="8dp"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/name_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ddddddddddd"
                        android:textColor="@color/blue_secondry"
                        android:textSize="@dimen/space_20"
                        android:textStyle="bold"
                        app:fontFamily="@font/poppins_medium" />

                </RelativeLayout>
                <RelativeLayout
                    android:layout_marginRight="@dimen/space_15"
                    android:layout_marginTop="@dimen/space_5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/location_icon"
                        android:layout_width="@dimen/space_15"
                        android:layout_height="@dimen/space_25"
                        android:src="@drawable/mappinicon"/>

                    <TextView
                        android:id="@+id/location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/location_icon"
                        android:maxLength="50"
                        android:text="aaaaaaaa"
                        android:textColor="@color/dark_gray"
                        android:textSize="@dimen/space_15"
                        app:fontFamily="@font/poppins" />


                </RelativeLayout>
                <LinearLayout
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                       <RelativeLayout
                           android:layout_marginTop="@dimen/space_5"
                            android:layout_marginBottom="@dimen/space_10"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:id="@+id/exp_title"
                                android:layout_width="@dimen/space_15"
                                android:src="@drawable/timeicon"
                                android:layout_height="@dimen/space_15" />

                           <TextView
                               android:id="@+id/date_Tv"
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:layout_marginLeft="4dp"
                               android:layout_toRightOf="@+id/exp_title"
                               android:text="4:00 PM, 12th JAN @016"
                               android:textColor="@color/dark_black"
                               android:textSize="@dimen/space_12"
                               android:textStyle="bold"
                               app:fontFamily="@font/poppins_semibold" />

                        </RelativeLayout>
                    </LinearLayout>


                </LinearLayout>


            </LinearLayout>

        </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height=".5dp"
                android:background="#ccc"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_50"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <LinearLayout
                    android:elevation="@dimen/space_5"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/space_25"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/space_10"
                    android:background="@drawable/button_touch_blue"
                    android:gravity="center"
                    android:paddingLeft="@dimen/space_8"
                    android:paddingRight="@dimen/space_8"
                    android:orientation="vertical">
                <TextView
                    android:id="@+id/status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="PERSONAL CARE"
                    android:textColor="@color/white"
                    android:textSize="@dimen/space_10"
                    app:fontFamily="@font/poppins" />
                </LinearLayout>

                <LinearLayout
                    android:elevation="@dimen/space_5"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/space_25"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/space_10"
                    android:background="@drawable/edit_text2"
                    android:gravity="center"
                    android:paddingLeft="@dimen/space_15"
                    android:paddingRight="@dimen/space_15"
                    android:orientation="vertical">

                <TextView
                    android:id="@+id/view_deatils_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="VIEW DETAILS"
                    android:textColor="@color/dark_gray"
                    android:textSize="@dimen/space_10"
                    app:fontFamily="@font/poppins_medium" />
                </LinearLayout>

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:orientation="horizontal"></LinearLayout>



                <LinearLayout
                    android:elevation="@dimen/space_5"
                    android:layout_marginRight="@dimen/space_5"
                    android:layout_width="@dimen/space_30"
                    android:layout_height="@dimen/space_30"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:background="@drawable/button_touch_blue"
                    android:orientation="vertical">
                <ImageView
                    android:id="@+id/call_icon"
                    android:layout_width="@dimen/space_20"
                    android:layout_height="@dimen/space_20"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_call_black_24dp" />
                </LinearLayout>
                <LinearLayout
                    android:elevation="@dimen/space_5"
                    android:layout_width="@dimen/space_30"
                    android:layout_height="@dimen/space_30"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_marginLeft="@dimen/space_5"
                    android:layout_marginRight="@dimen/space_15"
                    android:background="@drawable/button_touch_orange"
                    android:orientation="vertical">
                <ImageView
                    android:id="@+id/map_icon"
                    android:layout_width="@dimen/space_15"
                    android:layout_height="@dimen/space_15"

                   android:layout_gravity="center"
                    android:src="@drawable/ic_place_black_24dp" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
